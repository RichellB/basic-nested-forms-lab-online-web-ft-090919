<%= form_for @recipe do |f| %>
  <%= f.label "Recipe title:" %>
  <%= f.text_field :title %><br/>

  <%= f.fields_for :ingredients do |sec_form| %>
    <%= sec_form.label :name %>
    <%= sec_form.text_field :name %><br/>

    <%= sec_form.label :quantity %>
    <%= sec_form.text_field :quantity %><br/>
  <% end %>

  <%= f.submit %>
<% end %>